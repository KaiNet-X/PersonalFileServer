<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:FileClient.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FileClient.Views.Signin"
             x:DataType="vm:SigninViewModel">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
	  <Grid.RowDefinitions>
		  <RowDefinition>auto</RowDefinition>
		  <RowDefinition>auto</RowDefinition>
	  </Grid.RowDefinitions>
    <TextBlock Text="Username" Grid.Column="0" />
    <TextBox Text="{Binding Username}" Grid.Column="1" />
    <TextBlock Text="Password" Grid.Column="0" Grid.Row="1"/>
    <TextBox PasswordChar="*" Text="{Binding Password}" Grid.Column="1" Grid.Row="1"/>
	<Button Command="{Binding SignIn}">Sign in</Button>
  </Grid>
</UserControl>
